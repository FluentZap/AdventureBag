@using Adventure;
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
	<meta charset="utf-8">
	<title></title>
	<script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
	<script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
	<script type="text/javascript" src="~/js/notice.js"></script>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
	<link rel="stylesheet" href="~/css/noticeStyles.css">
</head>
<body>
  <div class="container">
    @if (Model.Count == 0)
    {
      <p>You have no items in your bag!</p>
    }
    @if(Model.Count != 0)
    {
      @foreach (NoticeItem item in Model)
		 {
        <li>@item.Title</li>
		 }
    }


  </div>
	<div style="text-align:center;">
		<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Post Notice</button>
	</div>

  @*<a href="/addnotice" role="button" class="btn btn-dark"><h2>Add Notice</h2></a>*@
  

  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Post Notice</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="/addnotice" method="post">
          <div class="modal-body">
            <input class="form-control" type="text" placeholder="Title" id="title" name="title">

            <textarea placeholder="Description of notice" class="form-control" rows="8" id="description" name="description"></textarea>

            <div class="row">
               <div class="col">
                 <input type="text" class="form-control" placeholder="Rewards" id="reward" name="reward">
               </div>
               <div class="col">
                 <input type="text" class="form-control" placeholder="Posted By" id="postedby" name="postedby">
               </div>
             </div>

            <input class="form-control" type="text" placeholder="Expiration" id="expiration" name="expiration">

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Post Notice</button>
          </div>
        </form>
      </div>
    </div>
  </div>

</body>
</html>
